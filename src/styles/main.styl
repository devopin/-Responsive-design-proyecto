@import './normalize.css'
@import './reset'
@import './video'
@import './content'
@import nib

$black = #212121
$white = #FAFAFA

body
	font-size 16px
	font-family 'Lato'
	
.header
	background-color $black
	color $white
	height 64px
	position fixed
	top 0
	left 0
	width 100%
	z-index 10
	line-height 64px
	font-family 'Montserrat'
	
	&--light
		background-color $white
		color $black
			
	&--light &-menu-navbar
		background-color $white
	&--light &-menu-list-item
		a
			color $black
	
	&--light &-btn-nav
		background-color $white			

	
	&-mobile
		display flex
		justify-content space-between
				
	&-logo
		order 1
		margin-left 1rem
	
	&-btn-nav
		border 0
		border-radius 5px
		background-color $black
		order 2
		padding 0
		margin-right 1rem
		
	
	&-menu-navbar
		background-color $black
		
		
	&-menu-list
		list-style-type none
		height 0
		overflow hidden 
		transition height 0.3s ease 
		
		&--show
			height 280px
				
		&-item
			a
				text-decoration none
				color $white	
				padding 0 1rem
				width 100%
				display block
				

				
@media (min-width: 850px)
	.header
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content space-between
		height 80px
		transition all .3s ease
		line-height 80px
		
		&-logo
			margin-left 2rem

		&-btn-nav
			display none
		
		&-menu-list
			height 80px
			
			&-item
				display inline-block






			

		
		
	
